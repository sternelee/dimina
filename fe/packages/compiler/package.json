{
	"name": "@dimina/compiler",
	"version": "1.0.8",
	"description": "星河编译工具",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"type": "module",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./view-compiler": {
			"import": "./dist/core/view-compiler.js",
			"require": "./dist/core/view-compiler.cjs"
		},
		"./logic-compiler": {
			"import": "./dist/core/logic-compiler.mjs",
			"require": "./dist/core/logic-compiler.js"
		},
		"./style-compiler": {
			"import": "./dist/core/style-compiler.js",
			"require": "./dist/core/style-compiler.cjs"
		}
	},
	"bin": {
		"dmcc": "dist/bin/index.js"
	},
	"scripts": {
		"build": "vite build",
		"test": "vitest run",
		"test:dev": "vitest",
		"coverage": "vitest run --coverage"
	},
	"author": "doslin",
	"license": "Apache-2.0",
	"keywords": [
		"dimina",
		"compiler",
		"miniapp",
		"小程序",
		"星河"
	],
	"dependencies": {
		"@babel/core": "^7.28.3",
		"@babel/plugin-transform-modules-commonjs": "^7.27.1",
		"@babel/traverse": "^7.28.3",
		"@babel/types": "^7.28.2",
		"@vue/compiler-sfc": "^3.5.19",
		"autoprefixer": "^10.4.21",
		"cheerio": "^1.1.2",
		"chokidar": "^4.0.3",
		"commander": "^14.0.0",
		"cssnano": "^7.1.0",
		"esbuild": "^0.25.9",
		"htmlparser2": "^10.0.0",
		"less": "^4.4.1",
		"listr2": "^9.0.2",
		"postcss": "^8.5.6",
		"postcss-selector-parser": "^7.1.0",
		"sass": "^1.90.0",
		"typescript": "^5.9.2"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	}
}
